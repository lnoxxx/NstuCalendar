<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NstuCalendar" />

    <!--    Button-->

    <style name="NstuCalendar.Button" parent="Widget.Material3.Button" />

    <!--    Switch-->

    <style name="NstuCalendar.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch" />

    <!--    ToolBar-->

    <style name="NstuCalendar.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!--    TabLayout-->

    <style name="NstuCalendar.TabLayout.Secondary" parent="Widget.Material3.TabLayout.Secondary">
        <item name="android:background">@color/transparent</item>
        <item name="tabTextColor">@color/tab_layout_color_selector</item>
        <item name="tabIndicator">@drawable/shape_default_corners</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!--    TextInputLayout-->

    <style name="NstuCalendar.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>
    </style>

    <style name="NstuCalendar.TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>
    </style>

    <!--    BottomSheet-->

    <style name="NstuCalendar.ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal" />

    <!--    CardView-->

    <style name="NstuCalendar.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/corner_radius_default</item>
    </style>

    <style name="NstuCalendar.CardView.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_default</item>
    </style>

    <style name="NstuCalendar.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/corner_radius_default</item>
    </style>

    <!--    TextView-->

    <style name="NstuCalendar.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!--    TextView.Medium-->
    <style name="NstuCalendar.TextView.Medium">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Headline.Outline">
        <item name="android:textColor">?attr/colorOutline</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Text">
        <item name="android:textSize">@dimen/text_size_text</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Text.Outline">
        <item name="android:textColor">?attr/colorOutline</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Label.PrimaryBackground">
        <item name="android:background">@drawable/shape_corners_circle</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Label.OutlineVariantBackground">
        <item name="android:background">@drawable/shape_corners_circle</item>
        <item name="android:backgroundTint">?attr/colorOutlineVariant</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="drawableTint">?attr/colorOnSurface</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Label.TertiaryBackground">
        <item name="android:background">@drawable/shape_corners_circle</item>
        <item name="android:backgroundTint">?attr/colorTertiary</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="drawableTint">?attr/colorOnTertiary</item>
    </style>

    <style name="NstuCalendar.TextView.Medium.Label.SecondaryBackground">
        <item name="android:background">@drawable/shape_corners_circle</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
    </style>


    <style name="NstuCalendar.TextView.Medium.Label.OutlineBackground">
        <item name="android:background">@drawable/shape_corners_circle</item>
        <item name="android:backgroundTint">?attr/colorOutline</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <!--    TextView.Black-->
    <style name="NstuCalendar.TextView.Black">
        <item name="android:fontFamily">@font/black</item>
    </style>

    <style name="NstuCalendar.TextView.Black.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="NstuCalendar.TextView.Black.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="NstuCalendar.TextView.Black.Text">
        <item name="android:textSize">@dimen/text_size_text</item>
    </style>

    <style name="NstuCalendar.TextView.Black.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

    <style name="NstuCalendar.TextView.Black.Label.Outline">
        <item name="android:textColor">?attr/colorOutline</item>
    </style>

    <!--    TextView.Regular-->
    <style name="NstuCalendar.TextView.Regular">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="NstuCalendar.TextView.Regular.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="NstuCalendar.TextView.Regular.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="NstuCalendar.TextView.Regular.Text">
        <item name="android:textSize">@dimen/text_size_text</item>
    </style>

    <style name="NstuCalendar.TextView.Regular.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

    <!--    TextView.Light-->
    <style name="NstuCalendar.TextView.Light">
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="NstuCalendar.TextView.Light.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="NstuCalendar.TextView.Light.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="NstuCalendar.TextView.Light.Title.Hint">
        <item name="android:textColor">?attr/colorOutline</item>
        <item name="drawableTint">?attr/colorOutline</item>
    </style>

    <style name="NstuCalendar.TextView.Light.Text">
        <item name="android:textSize">@dimen/text_size_text</item>
    </style>

    <style name="NstuCalendar.TextView.Light.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

</resources>